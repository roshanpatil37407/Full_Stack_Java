package may_2;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

  // Make sure your Student class is in this package

public class StudentDao {

    // Get database connection
    public static Connection getConnection() {
        Connection con = null;
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            con = DriverManager.getConnection(
                    "jdbc:mysql://localhost:3306/rita", "root", "root");
            System.out.println("Database connected successfully!");
        } catch (Exception e) {
            System.out.println("DB Connection Error: " + e);
        }
        return con;
    }

    // Insert student data
    public static int insertStud(Student st) {
        int status = 0;
        // Proper try-with-resources
        try {Connection con = getConnection();
             PreparedStatement ps = con.prepareStatement(
                     "INSERT INTO students(fullname, email, password, course) VALUES(?,?,?,?)");

            if (con == null) {
                System.out.println("Connection is null!");
                return 0;
            }

            ps.setString(1, st.getFullName());
            ps.setString(2, st.getEmail());
            ps.setString(3, st.getPassword());
            ps.setString(4, st.getCourse());

            status = ps.executeUpdate();
            System.out.println("Rows inserted: " + status);

        } catch (Exception e) {
            System.out.println("Insert Error: " + e);
        }
        return status;
    }

    // Validate login
    public static boolean validateLogin(String email, String password) {
        boolean valid = false;
        try {Connection con = getConnection();
             PreparedStatement ps = con.prepareStatement(
                     "SELECT * FROM students WHERE email=? AND password=?"); 

            ps.setString(1, email);
            ps.setString(2, password);

            ResultSet rs = ps.executeQuery();
            if (rs.next()) {
                valid = true;
            }

        } catch (Exception e) {
            System.out.println("Login Error: " + e);
        }
        return valid;
    }
}
