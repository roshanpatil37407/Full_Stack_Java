package jdbc;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.util.Scanner;

public class insert {

    public static void main(String[] args) {
        try {
        
            Class.forName("com.mysql.cj.jdbc.Driver");

            
            Connection con = DriverManager.getConnection(
                    "jdbc:mysql://localhost:3306/Roshu", "root", "root");
            
            
            String sql="inset int employee_new value(?,?,?) ";
            PreparedStatement ps = con.prepareStatement(sql);
            
            while(true) {
                Scanner sc = new Scanner(System.in);

                System.out.println("Enter Name : ");
                String name = sc.next();    
                ps.setString(1, name);

                System.out.println("Enter Salary : ");
                double salary = sc.nextDouble();    
                ps.setDouble(2, salary);
                
                ps.addBatch();
                System.out.println("do yo want to continue press 1 or 0:");
                 int n=sc.nextInt();
                 
                 if(n==0)
                	 break;
            }

        


        
            int[] rs = ps.executeBatch();

            if (rs.length > 0) {
                System.out.println("Employee  dat sessfully added !");
            } else {
                System.out.println(" No employee found with ID ");
            }

            
            con.close();

        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}
