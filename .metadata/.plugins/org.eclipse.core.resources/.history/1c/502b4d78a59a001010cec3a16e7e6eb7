package jdbc;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;
import java.util.Scanner;

public class Update_Data {
    public static void main(String[] args) {
        try {
            // 1. Load driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // 2. Connect to database
            Connection con = DriverManager.getConnection(
                    "jdbc:mysql://localhost:3306/Roshu", "root", "root");

            // 3. Insert query (id is AUTO_INCREMENT so we donâ€™t insert it)
            String insertQuery = "update employee_new set name=? where id=?";
            PreparedStatement ps = con.prepareStatement(insertQuery);

            Scanner sc = new Scanner(System.in);

            System.out.println("Enter Name : ");
            String name = sc.next();    
            ps.setString(1, name);

            System.out.println("Enter Salary : ");
            double salary = sc.nextDouble();    
            ps.setDouble(2, salary);

            // Execute insert
            ps.executeUpdate();
            System.out.println("Employee inserted successfully!\n");

            // 4. Select query to display table
            Statement stmt = con.createStatement();
            ResultSet rs = stmt.executeQuery("SELECT * FROM employee_new");

            System.out.println("ID\tName\tSalary");
            while (rs.next()) {
                int id = rs.getInt("id");
                String empName = rs.getString("name");
                double empSalary = rs.getDouble("salary");
                System.out.println(id + "\t" + empName + "\t" + empSalary);
            }

            sc.close();
            con.close();
        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}
