package jdbc;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.util.Scanner;

public class InsertBatch {

    public static void main(String[] args) {
        try {
            // 1. Load Driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // 2. Connect to DB
            Connection con = DriverManager.getConnection(
                    "jdbc:mysql://localhost:3306/Roshu", "root", "root");

            // 3. Correct SQL (id auto-incremented, so no need to insert it)
            String sql = "INSERT INTO employee_new (name, salary) VALUES (?, ?)";
            PreparedStatement ps = con.prepareStatement(sql);

            Scanner sc = new Scanner(System.in);

            while (true) {
                System.out.print("Enter Name: ");
                String name = sc.next();
                ps.setString(1, name);

                System.out.print("Enter Salary: ");
                double salary = sc.nextDouble();
                ps.setDouble(2, salary);

                // Add to batch
                ps.addBatch();

                System.out.print("Do you want to continue? (1 = Yes / 0 = No): ");
                int n = sc.nextInt();

                if (n == 0) {
                    break;
                }
            }

            // Execute batch
            int[] rs = ps.executeBatch();

            System.out.println("âœ… " + rs.length + " Employee(s) inserted successfully!");

            con.close();
            sc.close();

        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}
