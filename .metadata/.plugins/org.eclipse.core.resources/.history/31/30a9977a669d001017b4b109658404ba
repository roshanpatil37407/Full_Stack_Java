package jdbc_crud;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;  // âœ… make sure this is imported
import java.sql.SQLException;

public class CRUD {

    public static void main(String[] args) throws ClassNotFoundException, SQLException {
        
        // Load JDBC Driver
        Class.forName("com.mysql.cj.jdbc.Driver");
        
        // Connect to Database (db name = jdbc, user = root, password = root)
        Connection con = DriverManager.getConnection(
            "jdbc:mysql://localhost:3306/jdbc", "root", "root");
        
       
        PreparedStatement ps = con.prepareStatement(
                "INSERT INTO emp VALUES (1, 'ram', 2000)");
            int i = ps.executeUpdate();

            // Update Query
            PreparedStatement ps2 = con.prepareStatement(
                "UPDATE emp SET name='riya' WHERE id=1");
            int j = ps2.executeUpdate();
            
            PreparedStatement ps3 = con.prepareStatement(
                    "UPDATE emp WHERE id=1");
                int k = ps2.executeUpdate();
                
            
            
        if (i > 0) {
            System.out.println("Success");
        } else {
            System.out.println("Fail");
        }
        if (j> 0) {
            System.out.println("Success");
        } else {
            System.out.println("Fail");
        }
        
        
        // Close resources
        ps.close();
        ps2.close();
        con.close();
    }
}
