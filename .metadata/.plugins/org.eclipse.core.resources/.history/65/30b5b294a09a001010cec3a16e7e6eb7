package jdbc;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;
import java.util.Scanner;

public class Feach_data {
    public static void main(String[] args) {
        try {
           
            Class.forName("com.mysql.cj.jdbc.Driver");

       
            Connection con = DriverManager.getConnection(
                    "jdbc:mysql://localhost:3306/Roshu", "root", "root");

            PreparedStatement ps = con.prepareStatement("SELECT * FROM employee_new");

          
        
            ResultSet rs = ps.executeQuery();

            System.out.println("ID\tName\tSalary");
            System.out.println("---------------------------------------------------------");
            while (rs.next()) {
                int id = rs.getInt("id");
                String empName = rs.getString("name");
                double empSalary = rs.getDouble("salary");
                System.out.println(id + "\t" + empName + "\t" + empSalary);
                }
            System.out.println("---------------------------------------------------------");
            
           
            con.close();
        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}
