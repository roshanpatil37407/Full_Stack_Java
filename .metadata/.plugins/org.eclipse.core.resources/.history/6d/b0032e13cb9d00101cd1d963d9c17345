package may_2;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class StudentDoa {

    // Get Database Connection
    public static Connection getConnection() {
        Connection con = null;
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            // Replace 'servlet' with your DB name, fix localhost spelling
            con = DriverManager.getConnection("jdbc:mysql://localhost:3306/servlet", "root", "root");
        } catch (Exception e) {
            System.out.println("DB Connection Error: " + e);
        }
        return con;
    }

    // Insert Student into DB
    public static int insertStud(Student st) {
        int status = 0;
        try {
            Connection con = getConnection();
            String sql = "INSERT INTO students(fullname, email, password, course) VALUES(?,?,?,?)";
            PreparedStatement ps = con.prepareStatement(sql);
            ps.setString(1, st.getFullName());
            ps.setString(2, st.getEmail());
            ps.setString(3, st.getPassword());
            ps.setString(4, st.getCourse());

            status = ps.executeUpdate(); 
            con.close();
        } catch (Exception e) {
            System.out.println("Insert Error: " + e);
        }
        return status;
    }
}
